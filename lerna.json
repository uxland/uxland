{
  "packages": ["packages/*", "react/*"],
  "ignoreChanges": [
    "packages/*/test/**",
    "react/*/test/**",
    "**/*.md",
    "**/*.mdx",
    "packages/*-bkp/**/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": ["master", "alpha", "beta", "52-uxland-react-utilities"],
      "message": "chore(release): publish new versions"
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
