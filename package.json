{
  "name": "@uxland/uxland",
  "description": "UXLand Libraries",
  "author": "UXLand <dev@uxland.es>",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uxland/uxland.git"
  },
  "bugs": {
    "url": "https://github.com/uxland/uxland/issues"
  },
  "homepage": "https://github.com/uxland/uxland#readme",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "current-git-branch": "^1.1.0",
    "docdash": "^1.2.0",
    "husky": "^4.2.1",
    "jsdoc": "^3.6.3",
    "lerna": "^3.22.1",
    "minami": "^1.2.3",
    "ncp": "^2.0.0"
  },
  "scripts": {
    "build:clean": "lerna run build:clean && rimraf packages/*/index.min.js",
    "build:test": "lerna run build:test",
    "build": "lerna run build --stream --parallel",
    "clean": "lerna run build:clean --stream --parallel",
    "deps:clean": "rimraf node_modules yarn.lock packages/**/node_modules",
    "deps:install": "yarn install",
    "deps:refresh": "yarn deps:clean && yarn deps:install",
    "docgen": "lerna run jsdoc",
    "readme:coverage": "lerna run readme:coverage --stream --parallel",
    "readme:coverage:commit": "yarn readme:coverage && git add packages/**/*.md && { git diff --staged --quiet || git commit -m 'docs: update README'; }",
    "release:dry-run": "lerna run semantic-release:dry-run",
    "release": "yarn build && yarn test && yarn readme:coverage",
    "postrelease": "yarn docgen && git add . && { git diff --staged --quiet || git commit -m 'docs: update documentation'; }",
    "test": "lerna run test --parallel",
    "precommit": "yarn test && yarn build:test && yarn readme:coverage && git add .",
    "postpublish": "yarn docgen && git add docs && { git diff --staged --quiet || git commit -m 'docs: new version documentation'; } && git push;"
  },
  "workspaces": [
    "packages/*",
    "react/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --config node_modules/@uxland/project-tools/lint/commitlint.config.js -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged -c node_modules/@uxland/project-tools/lint/lint-staged.config.js"
    }
  },
  "resolutions": {
    "serialize-javascript": "^3.1.0",
    "dot-prop": "^5.1.1",
    "y18n": "^5.0.5",
    "ssri": "^8.0.1",
    "ini": "^1.3.6",
    "puppeteer": "^9.1.1"
  }
}
